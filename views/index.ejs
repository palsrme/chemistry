<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <div class="row alerts">
        <div id="x-turn-alert" class="alert alert-success text-center alert-msg">X's Turn</div>
        <div id="o-turn-alert" class="alert alert-danger text-center alert-msg">O's Turn</div>
    </div>
    <h1 class="text-center"><%= title %></h1>
    <div class="large-space"></div>
    <div class="container">
        <%
        var rowNum = 0;

        for (var i = 0; i < imgs.length; i++) {
            if (i % 3 === 0) { %>
                <div id="row-<%=(++rowNum)%>" class="row">
            <% } %>

                <div id="box-<%=i%>" class="col-sm-4 col-xs-4 free-box info-card" position="<%=i%>" x-or-o="-">
                    <div class="front">
                        <img style="background-image: url('<%=imgs[i]%>');"/>
                    </div>
                    <div class="back">
                        <img id="o-img" src="/images/O.jpg"/>
                        <img id="x-img" src="/images/X.jpg"/>
                    </div>
                </div>

            <% if (i % 3 === 2) { %>
                </div>
            <% }
        } %>
    </div>
    <div id="questionModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Answer The Following Question</h4>
                </div>
                <div class="modal-body text-center"></div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
    <div id="resultModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body text-center">
                    <h1 id="result"></h1>
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="/javascripts/main.js"></script>
</html>
